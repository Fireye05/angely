---
import "@/styles/global.css";

const title = "Memorama Flores - Juego Terapéutico";
const description =
	"Un juego de memoria accesible y terapéutico para adultos mayores";
const viewport = "width=device-width, initial-scale=1, user-scalable=yes";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content={viewport} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<meta name="description" content={description} />
	</head>
	<body class="font-sans antialiased">
		<slot />
	</body>
</html>
